<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.ShoppingFragment"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:background="@color/online_shop_light_gray">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/black"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            app:tabSelectedTextColor="@color/online_shop_red"
            app:tabIndicatorColor="@color/online_shop_red">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textDirection="rtl"
            android:layoutDirection="rtl">

        </androidx.viewpager2.widget.ViewPager2>

    </LinearLayout>
</layout>