<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/home_page_fragment_des">


    <fragment
        android:id="@+id/home_page_fragment_des"
        android:name="com.example.onlineshop.view.fragment.HomePageFragment"
        android:label="HomePageFragment"
        tools:layout="@layout/fragment_home_page">
        <action
            android:id="@+id/action_home_page_fragment_des_to_list_products_fragment_des"
            app:destination="@id/list_products_fragment_des"
            app:popUpTo="@id/home_page_fragment_des" />
        <action
            android:id="@+id/action_home_page_fragment_des_to_product_detail_fragment_des"
            app:destination="@id/product_detail_fragment_des"
            app:popUpTo="@id/home_page_fragment_des" />
        <action
            android:id="@+id/action_home_page_fragment_des_to_search_Fragment_des"
            app:destination="@id/search_Fragment_des"
            app:popUpTo="@id/home_page_fragment_des" />
    </fragment>


    <fragment
        android:id="@+id/category_fragment_des"
        android:name="com.example.onlineshop.view.fragment.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/action_category_fragment_des_to_list_products_fragment_des"
            app:destination="@id/list_products_fragment_des"
            app:popUpTo="@id/category_fragment_des" />
        <action
            android:id="@+id/action_category_fragment_des_to_product_detail_fragment_des"
            app:destination="@id/product_detail_fragment_des"
            app:popUpTo="@id/category_fragment_des" />
        <action
            android:id="@+id/action_category_fragment_des_to_search_Fragment_des"
            app:destination="@id/search_Fragment_des"
            app:popUpTo="@id/category_fragment_des" />
    </fragment>
    <fragment
        android:id="@+id/shopping_fragment_des"
        android:name="com.example.onlineshop.view.fragment.ShoppingFragment"
        android:label="ShoppingFragment"
        tools:layout="@layout/fragment_shopping">
        <action
            android:id="@+id/action_shopping_fragment_des_to_shopping_cart_login_fragment_des"
            app:destination="@id/shopping_cart_fragment_des" />
        <action
            android:id="@+id/action_shopping_fragment_des_to_shopping_list_login_fragment_des"
            app:destination="@id/shopping_list_fragment_des" />
    </fragment>
    <fragment
        android:id="@+id/list_products_fragment_des"
        android:name="com.example.onlineshop.view.fragment.ListProductsFragment"
        android:label="ListProductsFragment"
        tools:layout="@layout/fragment_list_products" >
        <action
            android:id="@+id/action_list_products_fragment_des_to_product_detail_fragment_des"
            app:destination="@id/product_detail_fragment_des"
            app:popUpTo="@id/list_products_fragment_des" />
    </fragment>
    <fragment
        android:id="@+id/product_detail_fragment_des"
        android:name="com.example.onlineshop.view.fragment.ProductDetailFragment"
        android:label="ProductDetailFragment"
        tools:layout="@layout/fragment_product_detail" >
        <action
            android:id="@+id/action_product_detail_fragment_des_to_review_fragment_des"
            app:destination="@id/review_fragment_des"
            app:popUpTo="@id/product_detail_fragment_des" />
    </fragment>

    <fragment
        android:id="@+id/login_sign_up_fragment_des"
        android:name="com.example.onlineshop.view.fragment.LoginSignUpFragment"
        android:label="LoginSignUpFragment"
        tools:layout="@layout/fragment_login_sign_up">
        <action
            android:id="@+id/action_login_sign_up_fragment_des_to_sign_up_fragment_des"
            app:destination="@id/sign_up_fragment_des"
            app:popUpTo="@id/login_sign_up_fragment_des" />
        <action
            android:id="@+id/action_login_sign_up_fragment_des_to_address_fragment_des"
            app:destination="@id/address_fragment_des"
            app:popUpTo="@id/login_sign_up_fragment_des" />
        <action
            android:id="@+id/action_login_sign_up_fragment_des_to_information_fragment_des"
            app:destination="@id/information_fragment_des"
            app:popUpTo="@id/login_sign_up_fragment_des" />
        <action
            android:id="@+id/action_login_sign_up_fragment_des_to_setting_fragment_des"
            app:destination="@id/setting_fragment_des"
            app:popUpTo="@id/login_sign_up_fragment_des" />
    </fragment>
    <fragment
        android:id="@+id/shopping_cart_fragment_des"
        android:name="com.example.onlineshop.view.fragment.ShoppingCartFragment"
        android:label="ShoppingCartLoginFragment"
        tools:layout="@layout/fragment_shopping_cart" >
        <action
            android:id="@+id/action_shopping_cart_login_fragment_des_to_login_sign_up_fragment_des"
            app:destination="@id/login_sign_up_fragment_des"
            app:popUpTo="@id/shopping_cart_fragment_des" />
        <action
            android:id="@+id/action_shopping_cart_fragment_des_to_order_fragment_des"
            app:destination="@id/order_fragment_des"
            app:popUpTo="@id/shopping_cart_fragment_des"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/shopping_list_fragment_des"
        android:name="com.example.onlineshop.view.fragment.ShoppingListProductsFragment"
        android:label="ShoppingListLoginFragment"
        tools:layout="@layout/fragment_shopping_list_products" >
        <action
            android:id="@+id/action_shopping_list_login_fragment_des_to_login_sign_up_fragment_des"
            app:destination="@id/login_sign_up_fragment_des"
            app:popUpTo="@id/shopping_list_fragment_des" />
        <action
            android:id="@+id/action_shopping_list_fragment_des_to_list_products_fragment_des"
            app:destination="@id/list_products_fragment_des"
            app:popUpTo="@id/shopping_list_fragment_des" />
    </fragment>
    <fragment
        android:id="@+id/sign_up_fragment_des"
        android:name="com.example.onlineshop.view.fragment.SinUpFragment"
        android:label="SinUpFragment"
        tools:layout="@layout/fragment_sin_up" />
    <fragment
        android:id="@+id/search_Fragment_des"
        android:name="com.example.onlineshop.view.fragment.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"/>
    <fragment
        android:id="@+id/setting_fragment_des"
        android:name="com.example.onlineshop.view.fragment.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/address_fragment_des"
        android:name="com.example.onlineshop.view.fragment.AddressFragment"
        android:label="fragment_address"
        tools:layout="@layout/fragment_address" >
        <action
            android:id="@+id/action_address_fragment_des_to_add_address_fragment_des"
            app:destination="@id/add_address_fragment_des"
            app:popUpTo="@id/address_fragment_des" />
        <action
            android:id="@+id/action_address_fragment_des_to_show_map_per_address_fragment_des"
            app:destination="@id/show_map_per_address_fragment_des"
            app:popUpTo="@id/address_fragment_des" />
    </fragment>
    <fragment
        android:id="@+id/information_fragment_des"
        android:name="com.example.onlineshop.view.fragment.InformationFragment"
        android:label="fragment_information"
        tools:layout="@layout/fragment_information" />
    <fragment
        android:id="@+id/add_address_fragment_des"
        android:name="com.example.onlineshop.view.fragment.AddAddressFragment"
        android:label="fragment_add_adress"
        tools:layout="@layout/fragment_add_address" />
    <fragment
        android:id="@+id/list_address_fragment_des"
        android:name="com.example.onlineshop.view.fragment.ListAddressFragment"
        android:label="ListAddressFragment"
        tools:layout="@layout/fragment_list_address"/>
    <fragment
        android:id="@+id/order_fragment_des"
        android:name="com.example.onlineshop.view.fragment.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_order_fragment_des_to_list_address_fragment_des2"
            app:destination="@id/list_address_fragment_des"
            app:popUpTo="@id/order_fragment_des" />
    </fragment>
    <fragment
        android:id="@+id/review_fragment_des"
        android:name="com.example.onlineshop.view.fragment.ReviewFragment"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review" />
    <fragment
        android:id="@+id/show_map_per_address_fragment_des"
        android:name="com.example.onlineshop.view.fragment.ShowMapPerAddressFragment"
        android:label="ShowMapPerAddressFragment"
        tools:layout="@layout/fragment_show_map_per_address"/>


</navigation>